<div class="col-md-4 col-12">
  <% if rental.status == "ongoing" %>
    <div class="card border-info">
  <% else %>
    <div class="card border-success">
  <% end %>
    <div class="card-body p-3">
      <div class="card-text">
        <h6 class="card-title mb-1 text-truncate"><%= rental.listing.name %></h6>
        <p class="mt-0 mb-2 text-muted"><small><i class="fa-regular fa-user mr-1"></i> <%= rental.renter.full_name %></small></p>
        <div class="d-flex justify-content-between align-items-end text-muted">
          <% if rental.status == "ongoing" %>
            <p class="m-0">Due by <%= rental.request.return_time.strftime("%m/%d %l:%M %p") %></p>
            <%= link_to "Details", rental_path(rental.id), class:"btn btn-info btn-sm stretched-link" %>
          <% else %>
            <ul class="m-0 pl-3">
              <li>Pick-up <%= rental.request.pick_up_time.strftime("%m/%d %l:%M %p") %></li>
              <li>Due by <%= rental.request.return_time.strftime("%m/%d %l:%M %p") %></li>
            </ul>
            <%= link_to "Details", rental_path(rental.id), class:"btn btn-success btn-sm stretched-link" %>
          <% end %>
        </div>
      </div>
    </div>
  <% if rental.status == "ongoing" %>
    </div>
  <% else %>
    </div>
  <% end %>
</div>