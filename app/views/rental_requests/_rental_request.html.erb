<div class="col-md-4 col-12">
  <div class="card border-warning">
    <div class="card-body p-3">
      <div class="card-text">
        <h6 class="card-title mb-1 text-truncate"><%= rental_request.listing.name %></h6>
        <p class="mt-0 mb-2 text-muted"><small><i class="fa-regular fa-user mr-1"></i> <%= rental_request.requester.full_name %></small></p>
        <div class="d-flex justify-content-between align-items-end text-muted">
          <ul class="m-0 pl-3">
            <li>Pick-up <%= rental_request.pick_up_time.strftime("%m/%d %l:%M %p") %></li>
            <li>Due by <%= rental_request.return_time.strftime("%m/%d %l:%M %p") %></li>
          </ul>
          <%= link_to "Details", listing_rental_requests_path(rental_request.listing.id), class:"btn btn-warning btn-sm stretched-link" %>
        </div>
      </div>
    </div>
  </div>
</div>