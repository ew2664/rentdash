
<h2>My Requests</h2>
<table class="table table-striped col-md-12">
  <thead>
    <tr>
      <th>Listing</th>
      <th>Pick-up Date</th>
      <th>Return Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @rental_requests.each do |request| %>
      <tr>
        <td><%= link_to request.listing.name, listing_path(request.listing.id) %></td>
        <td><%= request.pick_up_time %></td>
        <td><%= request.return_time %></td>
        <td><%= request.status %></td>
        <td><%= link_to "Details", rental_request_path(request.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>