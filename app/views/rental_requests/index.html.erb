

<h2>Rental Requests for <em><%= @listing.name %></em></h2>

<table class="table table-striped col-md-12">
  <thead>
    <tr>
      <th>Requester</th>
      <th>Pick-up Date</th>
      <th>Return Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @rental_requests.each do |request| %>
    <tr>
      <td><%= request.requester.full_name %></td>
      <td><%= request.pick_up_time %></td>
      <td><%= request.return_time %></td>
      <td><%= request.status %></td>
      <td><%= link_to "Details", rental_request_path(id: request.id) %></td>
    </tr>
  <% end %>
  </tbody>
</table>