<%= content_tag :h1, "New Item Listing" %>
<% if flash[:errors] %>
  <%= content_tag :p, flash[:errors] %>
<% end %>
<%= form_for @listing do |f| %>
  Name: <%= f.text_field :name %><br>
  Description: <%= f.text_field :description %><br>
  Pick-up Location: <%= f.text_field :pick_up_location %><br>
  Rental Fee: <%= f.number_field :rental_fee, step: 0.01 %><br>
  Rental Fee Unit: <%= f.select :rental_fee_unit, rental_fee_unit_options %><br>
  Rental Fee Time: <%= f.select :rental_fee_time, rental_fee_time_options %><br>
  Deposit Amount: <%= f.number_field :deposit_amount, step: 0.01 %><br>
  <%= f.submit "Add Listing" %>
<% end %>