<%=yield%><%= render "shared/navbar" %>

<%= content_tag :h2, "New Item Listing" %>
<% if flash[:errors] %>
  <%= content_tag :p, flash[:errors] %>
<% end %>
<%= form_for @listing do |f| %>
  Name: <%= f.text_field :name %><br>
  Description: <%= f.text_field :description %><br>
  Pick-up Location: <%= f.text_field :pick_up_location %><br>
  Rental Fee: <%= f.number_field :fee, step: 0.01 %><br>
  Rental Fee Unit: <%= f.select :fee_unit, fee_unit_options %><br>
  Rental Fee Time: <%= f.select :fee_time, fee_time_options %><br>
  Deposit Amount: <%= f.number_field :deposit, step: 0.01 %><br>
  Item Category: <%= f.select :item_category, item_category_options %><br>
  <%= f.submit "Add Listing" %>
<% end %>